<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppModalStyle"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded"
        android:layout_margin="20dp"
        android:singleLine="true"
        android:visibility="gone"
        android:hint="please enter name of company"
        android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/nameOfCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="K1"
                android:textSize="40dp"
                android:visibility="invisible"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="K1"
                android:textSize="40dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="K2"
                android:textSize="40dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="K3"
                android:textSize="40dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="K4"
                android:textSize="40dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/first_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameOfCompany"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="K1"
                android:textSize="40dp"
                />
            <EditText
                android:id="@+id/AA"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/BA"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/CA"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/DA"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/second_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_k"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="K2"
                android:textSize="40dp"
                />
            <EditText
                android:id="@+id/AB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/BB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/CB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/DB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/third_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/second_k"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="K3"
                android:textSize="40dp"
                />
            <EditText
                android:id="@+id/AC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/BC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/CC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/DC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/four_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/third_k"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="K4"
                android:textSize="40dp"
                />
            <EditText
                android:id="@+id/AD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/BD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/CD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
            <EditText
                android:id="@+id/DD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:hint="1"
                android:autofillHints="1"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:background="@drawable/button_background"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="cancel"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="delete"
            android:backgroundTint="@color/red"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>